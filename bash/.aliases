# builtins
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

alias c="clear"
alias cl="clear"

alias ls="ls --color=always"
alias l="ls --color=always"
alias ll="ls -l"
alias la="ls -lA"

alias g="git"
alias gs="git status"
alias gc="git commit -m"
alias ga="git add"
alias gpl="git pull"
alias gplr="git pull --rebase"
alias gps="git push"
alias gco="git checkout"
alias gcl="git clone"
alias gfo="git fetch origin"

alias dk="docker"
alias dc="docker compose"
alias dcf="docker compose up --build --force-recreate"
alias dcl="docker compose logs --follow"

alias editz="vim ~/.bashrc"
alias edita="vim ~/.aliases"
alias editv="vim ~/.vimrc"
alias editc="cd ~/.config"

alias sourcez="source ~/.bashrc"
alias path='echo -e ${PATH//:/\\n}'
alias vi="vim"

